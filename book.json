{
  "title": "Upsurge HRMS API Documentation",
  "description": "Comprehensive API documentation for Upsurge HRMS - a complete Human Resource Management System",
  "author": "Upsurge Media",
  "language": "en",
  
  "root": "./",
  
  "structure": {
    "readme": "README.md",
    "summary": "SUMMARY.md"
  },
  
  "plugins": [
    "search",
    "prism",
    "anchors",
    "copy-code-button",
    "page-toc-button",
    "back-to-top-button",
    "expandable-chapters"
  ],
  
  "pluginsConfig": {
    "search": {
      "maxIndexSize": 1000000
    },
    "prism": {
      "css": [
        "prism-themes/themes/prism-ghcolors.css"
      ]
    },
    "page-toc-button": {
      "maxTocDepth": 2,
      "minTocSize": 2
    }
  },
  
  "variables": {
    "api_base_url": "https://api.upsurgemedia.in",
    "api_version": "v1",
    "swagger_url": "https://api.upsurgemedia.in/api/docs"
  },
  
  "links": {
    "sidebar": {
      "Swagger API Docs": "https://api.upsurgemedia.in/api/docs",
      "Support": "mailto:support@upsurgemedia.com",
      "Website": "https://upsurgemedia.com"
    }
  },
  
  "pdf": {
    "pageNumbers": true,
    "fontSize": 12,
    "fontFamily": "Arial",
    "paperSize": "a4",
    "margin": {
      "right": 62,
      "left": 62,
      "top": 56,
      "bottom": 56
    }
  }
}
